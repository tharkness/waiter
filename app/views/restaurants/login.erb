<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% if @restaurants[0] %>
      <% @restaurants.each do |restaurant| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <span class="icon is-medium">
                    <i class="fa fa-cutlery"></i>
                  </span>
                </div>
                <div class="media-content">
                  <p class="title is-5"><%= restaurant.name %></p>
                  <p class="subtitle is-6"><%= restaurant.address.split(",")[0] %></p>
                </div>
              </div>
              <div class="content">
                <% if restaurant.hostesses[0] %>
                  <form action="/restaurants/demologin" method="post">
                    <input type="hidden" name="hostess_id" id="hostess_id" value="<%= restaurant.hostesses[0].id %>" />
                  <button type="Submit" class="button is-fullwidth is-primary">log me in</button>
                </form>
                <% else %>
                  <a class="button is-fullwidth is-primary is-outlined">sign me up</a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
  <% end %>
<% else %>
  <div class="column">
    <p>We need your location to find your restaurant, then you may login.</p>
  </div>
  <div class="column">
    <form id="myForm" action='/restaurants' method="post">
      <input type='hidden' id="lat" name='lat' value='' />
      <input type='hidden' id="lon" name='lon' value='' />
      <button class="button is-info" type='submit' name='submit'>
        <span class="icon">
          <i class="fa fa-street-view"></i>
        </span>
      </button>
    </form>
  </div>
<% end %>
    </div>
  </div>
</section>
